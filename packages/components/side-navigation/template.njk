<div class="nhsuk-side-navigation-container" >
  <div class="nhsuk-side-navigation-options">
    <ul class="nhsuk-side-navigation__list">
      {%- for item in params.items %}     
        <li class="nhsuk-side-navigation__item">
          <a class="nhsuk-side-navigation__link" href="{{ item.href }}">{{ item.href | replace("#", "") | replace("_", " ") | capitalize }}</a>
        </li>
    {%- endfor %}
    </ul>
  </div>

  <div class="nhsuk-side-navigation-spacer"></div>

  <div class="nhsuk-side-navigation__sections">
    {%- for item in params.items %}
      <section class="nhsuk-side-navigation__section" id="{{ item.href | replace("#", "")}}">
        <h2>{{ item.href | replace("#", "") | replace("_", " ") | capitalize }}</h2>
        {{ item.text | safe }}
      </section>
    {%- endfor %}
  </div>
</div>